<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/hChattingListRow">
    <androidx.cardview.widget.CardView
        android:id="@+id/hChattingLIstRowCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="1dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="230dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="230dp"
                    android:layout_height="25dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    >
                    <TextView
                        android:id="@+id/hChattingListRoomName"
                        android:layout_width="wrap_content"
                        android:maxWidth="150dp"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="5dp"
                        android:ellipsize="end"
                        />
                    <TextView
                        android:id="@+id/hChattingListRoomNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="20sp"
                        android:layout_marginLeft="3dp"
                        />
                    <ImageView
                        android:id="@+id/hChattingListRoomAlarm"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="4dp"
                        android:background="@mipmap/ic_launcher"
                        />

                </LinearLayout>
                <TextView
                    android:id="@+id/hChattingListChat"
                    android:layout_width="230dp"
                    android:layout_height="45dp"
                    android:textSize="15sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/hLastChatDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>